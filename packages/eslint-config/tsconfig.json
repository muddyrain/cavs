// tsconfig.build.json
{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "outDir": "./dist/",
    "noEmit": false,
    "useDefineForClassFields": true,
    "lib": ["ES2020"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": ["src"]
}
